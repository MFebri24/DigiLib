{
  "name": "Member",
  "type": "object",
  "properties": {
    "member_number": {
      "type": "string",
      "description": "Nomor anggota unik"
    },
    "full_name": {
      "type": "string",
      "description": "Nama lengkap"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Email anggota"
    },
    "phone": {
      "type": "string",
      "description": "Nomor telepon"
    },
    "address": {
      "type": "string",
      "description": "Alamat lengkap"
    },
    "birth_date": {
      "type": "string",
      "format": "date",
      "description": "Tanggal lahir"
    },
    "member_type": {
      "type": "string",
      "enum": [
        "regular",
        "student",
        "premium"
      ],
      "default": "regular",
      "description": "Tipe keanggotaan"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "suspended",
        "expired"
      ],
      "default": "active",
      "description": "Status anggota"
    },
    "join_date": {
      "type": "string",
      "format": "date",
      "description": "Tanggal bergabung"
    },
    "photo_url": {
      "type": "string",
      "description": "URL foto anggota"
    },
    "total_borrowed": {
      "type": "integer",
      "default": 0,
      "description": "Total buku dipinjam"
    },
    "active_loans": {
      "type": "integer",
      "default": 0,
      "description": "Peminjaman aktif"
    }
  },
  "required": [
    "member_number",
    "full_name",
    "email"
  ],
  "rls": {
    "write": {
      "created_by": "{{user.email}}"
    }
  }
}